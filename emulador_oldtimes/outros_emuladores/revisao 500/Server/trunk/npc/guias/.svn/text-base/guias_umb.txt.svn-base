umbala.gat,128,94,3	script	Ricardo	702,{
	show "[Ricardo]";
	show "Isto é um lugar estranho,";
	show "talvez devido ao fato que não foi desenvolvido,";
	show "as estradas aqui podem ser muito perigosas.";
	next;
	show "[Ricardo]";
	show "Boas coisas já estiveram aqui ";
	show "por algum tempo, para saber bastante coisas sobre a aldeia";
	show "Você pode me pedir indicações se você quiser.";
	next;
	menu "Ver indicações",-,"Apagar indicações",L_MENU_2,"Cancelar",L_end1;

	show "[Ricardo]";
	show "O que você deseja saber?";
	next;
	menu "A casa do Comandante da aldeia",-,"A casa do Shaman da Aldeia",L_room2,"Loja de arma",L_room3,"Loja de equipamento",L_room4,"Bungee Jumping Spot",L_room5,"Cancelar",L_end2;

		show "[Ricardo]";
		show "O comandante vive ^FF0000aqui^000000,";
		show "só ele entende os idiomas de estranhos,";
		show "talvez você deveria o ver primeiro.";
		viewpoint 1,68,251,1,0xFF0000;
		close;

	L_room2:
		show "[Ricardo]";
		show "O shaman é conhecido para possuir poderes misteriosos,";
		show "a casa dele seria ^996600aqui^000000,";
		show "é dito que ele pode manipular os elementos da Terra facilmente!";
		viewpoint 1,218,187,2,0x996600;
		close;

	L_room3:
		show "[Ricardo]";
		show "A loja de arma é ^009933em cima daqui^000000,";
		show "por causa de ameaças do mundo externo,";
		show "eles possuem todos os tipos de armas.";
		viewpoint 1,125,155,3,0x009933;
		close;

	L_room4:
		show "[Ricardo]";
		show "^3333FFIsso^000000 seria a loja de equipamento,";
		show "eles vendem todos os tipos de equipamento útil";
		show "você deveria ter olhado antes de continua suas viagens.";
		viewpoint 1,136,127,4,0x3333FF;
		close;

	L_room5:
		show "[Ricardo]";
		show "Em Umbala há um 'Bungee Jumping Spot' não visto em qualquer outro lugar no mundo";
		show "como você pode ver ^66CC33em cima daqui^000000,";
		show "você pode experimentar isto, se você estiver um sentido bastante valente.";
		viewpoint 1,138,198,5,0x66CC33;
		close;

	L_end2:
		show "[Ricardo]";
		show "Removi todas as indicações do minimapa";
		show "volte e fale novamente comigo.";
		close;

L_MENU_2:	
		viewpoint 2,68,251,1,0xFF0000;
		viewpoint 2,218,187,2,0x996600;
		viewpoint 2,125,155,3,0x009933;
		viewpoint 2,136,127,4,0x3333FF;
		viewpoint 2,138,198,5,0x66CC33;
		show "[Ricardo]";
		show "Eu removi todas as indicações,";
		show "Se você ainda precisa saber sobre qualquer indicação, volte e fale comigo novamente.";
		close;

L_end1:
		show "[Ricardo]";
		show "Explore para saber novos caminhos para melhorar o seu divertimento, mas tome cuidado.";
		close;
}
